<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profil"
        android:layout_width="153dp"
        android:layout_height="149dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="165dp"
        android:src="@drawable/profil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textTittle6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="323dp"
        android:layout_marginStart="115dp"
        android:fontFamily="sans-serif"
        android:text="Arasha"
        android:textColor="#FFB8BF"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/editPena"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="323dp"
        android:layout_marginStart="200dp"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/email"
        android:layout_width="61dp"
        android:layout_height="40dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="110dp"
        android:src="@drawable/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginStart="67dp"
        android:text="Email"
        android:textColor="#FFB8BF"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/emailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="5dp"
        android:text="Arasha@gmail.com"
        android:textColor="#FFB8BF"
        android:textSize="15sp"
        tools:ignore="HardcodedText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/logoGantiPassword"
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:layout_marginEnd="245dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/gantiPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="#FFB8BF"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="60dp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@+id/emailUser"
        app:layout_constraintStart_toEndOf="@+id/logoGantiPassword"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/logoExport"
        android:layout_width="75dp"
        android:layout_height="85dp"
        android:layout_marginEnd="245dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/export"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoGantiPassword"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/exportExcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginStart="10dp"
        android:text="Export File to Excel"
        android:textColor="#FFB8BF"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@+id/gantiPassword"
        app:layout_constraintStart_toEndOf="@+id/logoExport"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/logoLogout"
        android:layout_width="67dp"
        android:layout_height="75dp"
        android:layout_marginEnd="245dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoExport"
        app:layout_constraintHorizontal_bias="0.5" />


    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#FFB8BF"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_marginTop="75dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/exportExcel"
        app:layout_constraintStart_toEndOf="@+id/logoLogout"
        app:layout_constraintHorizontal_bias="0.5" />



    <View
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="#FFB8BF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Wrapper for Icons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_wrapper"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        app:layout_constraintBottom_toBottomOf="@id/footer"
        app:layout_constraintStart_toStartOf="@id/footer"
        app:layout_constraintEnd_toEndOf="@id/footer"
        app:layout_constraintTop_toTopOf="@id/footer">

        <!-- Icon 1 -->
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icon 2 -->
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon1"
            app:layout_constraintEnd_toStartOf="@id/icon3"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <!-- Icon 3 -->
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/statistic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon2"
            app:layout_constraintEnd_toStartOf="@id/icon4"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <!-- Icon 4 -->
        <ImageView
            android:id="@+id/icon4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/account_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>