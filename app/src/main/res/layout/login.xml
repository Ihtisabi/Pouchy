<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/white">

<TextView
    android:id="@+id/textTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="116dp"
    android:lineSpacingExtra="4dp"
    android:text="Heyy\nPouchy\nBuddy!"
    android:textColor="#ED6276"
    android:textSize="40sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.137"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_margin="40dp"
    app:layout_constraintTop_toTopOf="parent" />

<ImageView
    android:id="@+id/imageWallet"
    android:layout_width="195dp"
    android:layout_height="168dp"
    android:src="@drawable/pouchy_logo"
    tools:layout_editor_absoluteX="190dp"
    tools:layout_editor_absoluteY="103dp" />

<!-- Input Email -->
<EditText
    android:id="@+id/editTextEmail"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="40dp"
    android:background="@drawable/border"
    android:hint="@string/email"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="392dp"
    tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:background="@drawable/border"
        android:hint="@string/password"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="462dp" />


<!--    &lt;!&ndash; Lupa Password &ndash;&gt;-->
    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#FF6680"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="8dp"
        android:clickable="true"
        android:focusable="true"/>

